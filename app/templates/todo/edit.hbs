<p>{{#link-to "todo.index"}}<i class="icon-arrow-left"></i> Back{{/link-to}}</p>

<form class="form-horizontal" role="form" {{action submit on="submit"}}>
  <div class="todo cn">
    <div class="form-group">
      {{view Ember.Checkbox checkedBinding="isCompleted" classNames="toggle"}}
      {{view view.textField classNames="form-control"}}
    </div>
    <div class="form-group">
      <div class="left-icon"><i class="icon-calendar"></i></div>
      {{#if showDueDate}}
        {{view App.DateField class="form-control" id="dueDate" dateBinding="dueDate"}}
      {{else}}
        <a href {{action "enterDueDate"}} class="form-control">Set due date</a>
      {{/if}}
    </div>
    <div class="form-group">
      <div class="left-icon"><i class="icon-star"></i></div>
      {{#if showPriority}}
        {{view Ember.Select
            contentBinding="priorities"
            optionValuePath="content.value"
            optionLabelPath="content.label"
            valueBinding="priority"
            class="form-control"}}
      {{else}}
        <a href {{action "enterPriority"}} class="form-control">Set priority</a>
      {{/if}}
    </div>
  </div>
  <div class="form-group pull-right">
    <button class="btn btn-primary">Save</button>
    <button class="btn btn-danger" type="button" {{action delete}}>Delete</button>
  </div>
</form>
